<div class="title">
    <h2><%= @article.title %></h2>
</div>
  <p><%= @article.content %></p>
  <p align="right"><%= link_to 'Back', users_path, class: "btn btn-info"%></p>
<br>

<h4>コメント</h4>
  <%=render :partial => @article.comments %>  
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <div>
    <div class="field">
      <%= f.label :名前 %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :コメント %><br>
      <%= f.text_field :content, :size => "100x100"%>
    </div><br>
    <div class="actions">
      <%= f.submit class: "btn btn-large btn-info"%>
    </div>
  </div>
  <% end %>