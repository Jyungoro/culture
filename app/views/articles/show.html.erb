<div class="title">
  <h3><%= @article.title %></h3>
</div>
<br><br><br><br>
  <% if @id == "5" then %>
   <%= image_tag("shirota_pic.png", size: "300x500") %>
  <% end %> 
  <p><%= image_tag @article.image.thumb.url if @article.image? %></p>
  <p><%= simple_format(@article.content) %></p>
  <p align="right"><%= link_to '戻る', users_path, class: "btn btn-info"%></p>
<hr class="style-one">

<h4>コメント</h4>
  <%=render :partial => @article.comments %>  
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <div><br>
    <div class="field">
      <%= f.label :名前 %><br>
      <%= f.text_field :name, :size => "80" %>
    </div>
    <div class="field">
      <%= f.label :コメント %><br>
      <%= f.text_area :content, :size => "100x8"%>
    </div><br>
    <div class="actions">
      <%= f.submit "コメント作成", class: "btn btn-large btn-info"%>
    </div>
  </div>
  <% end %>