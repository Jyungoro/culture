<%= form_for(@article) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<div>
    <%= f.label :Title %><br>
    <%= f.text_field :title, :size => "100" %>
  </div><br>
  <div>
    <%= f.label :Body %><br>
    <%= f.text_area :content, :size => "100x15"%>
  </div><br>
  <div>
    <%= f.submit :新規作成, class: "btn btn-info btn-lg"%>
  </div>
  </div>
  <% end %>