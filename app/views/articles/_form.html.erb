<%= form_for(@article) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<div>
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, :size => "100" %>
  </div><br>
  <div>
    <%= f.label :本文 %><br>
    <%= f.text_area :content, :size => "100x15"%>
  </div><br>

  <div class="field">
    <% if @article.image? %>
      <div class="thumbnail">
        <%= image_tag @article.image.url %>
      </div>
    <% end %><br>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
     <%= f.hidden_field :image_cache %> 
  </div>

  <div>
    <%= f.submit :新規作成, class: "btn btn-info btn-lg"%>
  </div>
  </div>
  <% end %>