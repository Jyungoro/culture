<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %>'s page</h1>
    </section>
    <section>
      <div>
        <%= link_to "新規作成", new_article_path, class: "btn btn-warning btn-lg" %>
      </div>
    </section>
  </aside>
  <div class="span8">
  	<% if @user.articles.any? %>
  	 <h3>Articles(<%= @user.articles.count %>)</h3>
  	 <ol class="articles">
  	 	<%= render @articles %>
  	 </ol>
  	 <%= will_paginate @articles %>
  	 <% end %>
  </div>
</div>